{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "jsx": "react-jsx",
    "paths": {
      "@/*": ["./*"],
      "@kwilt/arc-survey": ["./packages/arc-survey/src/index.ts"],
      "@kwilt/arc-survey/*": ["./packages/arc-survey/src/*"]
    },
    "types": [
      "node"
    ]
  },
  "exclude": [
    "node_modules",
    "supabase",
    "jest.setup.ts",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ]
}
